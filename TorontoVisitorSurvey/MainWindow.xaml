<Window x:Class="TorontoVisitorSurvey.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/TorontoVisitorSurvey;component/Images/toronto.jpg">
            </ImageBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Name="welcome" Content="Welcome to Toronto Survey" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" FontSize="18" FontWeight="Bold"/>
        <Button Name="btnStart" Content="Start Survey" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Height="25" Margin="20,0,20,0" Click="btnStart_Click"/>
    </Grid>
</Window>
